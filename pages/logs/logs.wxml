<view class="cu-card case {{isCard?'no-card':''}} body-color">
  <view class="cu-item shadow">
    <view class="image">
      <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="widthFix"></image>
    </view>
    
    <view class="cu-list menu-avatar">
      <form>
        <view class="cu-form-group margin-top">
          <view class="title">手机号</view>
          <input placeholder="请输入手机号" bindinput="talks"></input>
        </view>

        <view class="padding flex flex-direction">
          <button class="cu-btn bg-green lg" bindtap="dengLv">登录</button>
        </view>
      </form>     
    </view>
  </view>
</view>