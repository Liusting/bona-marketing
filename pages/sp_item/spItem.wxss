/* pages/commodity_item/commodityItem.wxss */
.tower-swiper .tower-item {
	transform: scale(calc(0.5 + var(--index) / 10));
	margin-left: calc(var(--left) * 100rpx - 150rpx);
	z-index: var(--index);
}

.spItem-form-group {
	background-color: var(--white);
	padding: 1rpx 30rpx;
	display: flex;
	align-items: center;
	min-height: 80rpx;
	justify-content: space-between;
}
.spItem-form-group1 {
	background-color: var(--white);
	padding: 1rpx 30rpx;
	display: flex;
	align-items: center;
	min-height: 80rpx;
	justify-content: space-between;
}
.spItem-form-group .title {
  min-width: calc(4em + 30rpx);
}

.detail{
  height:80rpx;
  width:100%;
  display:flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  font-size: 25rpx;
}
.background-white{
  background-color: var(--white);
}

.height15{
  height: 15rpx;
}

.item-view-left{
  display: flex;
	align-items: center;
}

.padding-left15{
  padding: 7rpx;
}
