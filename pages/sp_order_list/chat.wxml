<view class="cu-custom" style="background:#2f70df;height:{{CustomBar}}px">
  <view class="cu-bar fixed {{bgImage!=''?'none-bg text-white bg-img':''}} {{bgColor}}" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;{{bgImage?'background-image:url(' + bgImage+')':''}}">
    <cu-custom  isBack="{{true}}">
      <view slot="backText">返回</view>
      <view slot="content">李晓芳</view>
    </cu-custom>
  </view>
</view>
<view>
  <scroll-view scroll-y scroll-into-view='{{toView}}' style='height: {{deviceH-CustomBar}}px;'>
    <!-- <view class='scrollMsg'> -->
    <block wx:key wx:for='{{msgList}}' wx:for-index="index">

      <!-- 单个消息1 客服发出（左） -->
      <view wx:if='{{item.speaker=="server"}}' id='msg-{{index}}' class="flex align-center padding">
        <view >
          <view class="cu-avatar radius" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big107000.jpg);"></view>
        </view>
        <text class='margin-left bg-white padding-sm text-black radius' >{{item.content}}</text>
      </view>

      <!-- 单个消息2 用户发出（右） -->
      <view wx:else id='msg-{{index}}' class="flex justify-end align-center padding">
        <text class='margin-right padding-sm text-black radius' style="background-color: #96EB6A;">{{item.content}}</text>
        <view >
          <view class="cu-avatar  radius" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big107000.jpg);"></view>
        </view>
      </view>

    </block>

  </scroll-view>

  <view class='inputRoom' style='bottom: {{inputBottom}}'>
    <!-- <image style='width: 7vw; margin-left: 3.2vw;' src='../../images/pic_icon.png' mode='widthFix'></image> -->
    <input class="solid-bottom" bindconfirm='sendClick' bindfocus='focus' confirm-type='send'  value='{{inputVal}}' confirm-type='send' bindblur='blur' adjust-position="{{false}}" focus="{{false}}" ></input>
    <view class="text-xxl">
      <text class="cuIcon-roundadd "></text>
    </view>
  </view>

</view>
