<view  style="background:#fff;margin-bottom:20rpx">
  <view class="list-item1">
    <view class="userInfo">
    <text class="text-bold margin-left">头像</text>
    </view>
    <view class="margin-right">
    <view class="userinfo-avatar">
      <open-data  type="userAvatarUrl"></open-data>
      </view>
    </view> 
  </view>
  <view class="cu-bar">
    <text class="text-bold margin-left">微信昵称</text>
    <text class="margin-right">Liusting</text>
  </view>
</view>
<view class="container">
  <!-- 姓名 -->
  <view class="cu-bar" style="border-bottom:1px solid #f1f1f1">
    <text class="text-bold margin-left">真实姓名</text>
    <text 
    bindtap="showModal" data-target="nameModal" data-typeid="{{0}}">{{name}}    <text class="{{'cuIcon-right text-gray'}}" ></text></text>
  </view>
  
<!-- 手机号 -->
  <view class="cu-bar" style="border-bottom:1px solid #f1f1f1">
    <text class="text-bold margin-left">手机</text>
    <text  bindtap="showModal" data-target="phonenumberModal" data-typeid="{{0}}">{{phoneNumber}}    <text class="{{'cuIcon-right text-gray'}}" ></text></text>

  </view>
  <!-- 性别 -->
  <view class="cu-bar" style="border-bottom:1px solid #f1f1f1" >
    <text class="text-bold margin-left">性别</text>
    <picker  mode="selector" value="{{index}}" bindchange="changeSexy" range="{{array}}">
    <view >
      {{array[index]}}<text class="{{'cuIcon-right text-gray'}}"></text>
    </view>
    </picker>
  </view>
  </view>
  <view>
</view>

<view class="text-grey cu-bar margin-left" >
生日信息只能修改一次
</view>
<view class="bg-white">
<view class="cu-bar">
 <text class="text-bold margin-left">生日</text>
 <picker  mode="date" value="{{date}}" bindchange="changeDate">
 <view class="picker-date">
  {{date}}<text class="{{'cuIcon-right text-gray'}}" ></text>
 </view>
 </picker>
</view>
</view>
<!-- 点击姓名时出现弹框 -->
		<view class="cu-modal {{modalName=='nameModal'?'show':''}}">
			<form class="cu-dialog" bindsubmit="formSubmit" bindreset="formReset">
				<view class="cu-bar bg-white justify-end">
					<view class="content">修改姓名</view>
				</view>
				<view style="background-color:white">
					 <input class="name-input" maxlength="10" name='userName' value='{{name}}' type="text" placeholder="请输入真实姓名" />
				</view>
				<view class="cu-bar bg-white justify-end">
					<view class="action">
						<button class="cu-btn line-green text-green" form-type="reset" bindtap="hideModal">取消</button>
						<button class="cu-btn bg-green margin-left" form-type="submit" bindtap="hideModal">确定</button>
					</view>
				</view>
			</form>
		</view>
   
      <!-- 点击修改手机号码时出现弹框 -->
		<view class="cu-modal {{modalName=='phonenumberModal'?'show':''}}">
						<form class="cu-dialog" bindsubmit="phoneNumberSubmit" bindreset="formReset">
				<view class="cu-bar bg-white justify-end">
					<view class="content">修改手机号码</view>
				</view>
				<view style="background-color:white">
					 <input class="name-input" maxlength="11" name='phoneNumber' value='{{phoneNumber}}' type="text" placeholder="请输入手机号码" />
				</view>
				<view class="cu-bar bg-white justify-end">
					<view class="action">
						<button class="cu-btn line-green text-green" form-type="reset" bindtap="hideModal">取消</button>
						<button class="cu-btn bg-green margin-left" form-type="submit" bindtap="hideModal">确定</button>
					</view>
				</view>
			</form>
		</view>