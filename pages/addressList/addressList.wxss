page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.head{
  height: 50px;
  background-color: #ffffff;
}
.product-name-wrap{
  padding-left: 10px;
  padding-top: 5px;
  height: 50px;
  font-size: 14px;
  color: #404040;
  background-color: #ffffff;
  border-bottom: 1px solid red
}
.ui-list-item-info{
  font-weight: 700
}
.ui-list-item-address{
  font-size: 30rpx;
  color: #585c64;
    overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
}

.ui-list-item-del{

  color: #585c64;
    float: right;
    margin-top: 15px
}
.add-address{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom:0px;
  background-color: blueviolet;
  line-height: 40px;
  text-align: center;
  border-radius: 5rpx;
  display: block;
}
.add-img{
  margin-right: 15rpx;
  width: 15px;
  height: 15px;
}