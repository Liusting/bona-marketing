<scroll-view scroll-y style="height:430px;">
  <view class="shop">
    <view class="orderListTitle" >
      <view style="height:100%;width:100%;">
        <view class="cu-avatar sm round margin-left" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg);"></view>
        <text class="userName" >小米旗舰店</text>
      </view>
    </view>
    <view class="orderListDetails">
      <view class="cartnull">
        <image class="scimg" src="https://m.360buyimg.com/n12/jfs/t11317/108/1080677336/325163/f4c2a03a/59fd8b17Nbe2fcca3.jpg!q70.jpg" mode="widthFix"></image>
      </view>
      <view class="goods_content">
        <text class='shop_name' >小米9手机壳cc9e红米k20Pro青春note7版8保护6x套max3note5防摔mix2s全包屏幕指纹se八5plus九a硅胶note3磨砂</text>        
        <text style="margin-top:10rpx;" class='shop_type'>规格：天蓝色，8G，16G，顺丰配送</text>  
        <view style="margin-top:20rpx;">
          <text class="iconfont icon-arrowright text-red text-lg" style="margin-right:10px">￥1699.89</text>
          <text class="text-sm" style="text-decoration:line-through" >￥1799.00</text>
          <text style="float:right;margin-right:10rpx">共2件</text>
        </view>
     </view>
    </view>
  </view>

  <!-- 配送方式 -->
  <view class="msg_list" >
    <view class="msg_item" bindtap="showModal" data-target="RadioModal">
      <view>配送方式</view>
      <view >{{modeName}}<text class="{{'cuIcon-right text-gray'}}"></text></view>
    </view>   
    <view class="msg_item" bindtap="showModal" data-target="timeModal">
      <view>自提时间</view>
      <view >{{modeName}}<text class="{{'cuIcon-right text-gray'}}"></text></view>
    </view> 
  </view>
 
 <!-- 商品优惠 -->
  <view class="msg_list">
    <view class="msg_item" bindtap="preferential">
      <view>商品优惠</view>
      <view >满{{preferential_info.total}}减{{preferential_info.reduce}}<text class="{{'cuIcon-right text-gray'}}"></text></view> 
    </view>

      <!-- 留言模块 -->
    <view class="message">
      <view style="width:18%;">订单备注</view>
      <input style="width:82%;" placeholder="其他要求"/>
    </view>
    <view class="Total"> 合计 
      <text class="Total_price">￥3398.00</text>
  </view>
</view>
</scroll-view>
<view class="order_pay">
    <view class="pay_money">付款 <text class="Total_price">￥3348.00</text></view>
    <view class="submit_order" bindtap="showModal" data-target="bottomModal">提交订单</view>
</view>

<!-- 选择底部滑窗 -->
  <view class="cu-modal justify-start bottom-modal {{modalName=='bottomModal'?'show':''}}" bindtap="hideModal" style='overflow: hidden;'>
    <view class="cu-dialog background-white" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
        <view class="cu-item shadow">
          <view class="bottom text-green">微信支付</view>
          <view class="bottom">货到付款</view>
          <view class="bottom">储值支付</view>
          <view class="bottom" bindtap="hideModal" >取消</view>
        </view>
       </view>
        </view>

  <!-- 配送方式选择 -->
  <view class="cu-modal {{modalName=='RadioModal'?'show':''}}" bindtap="hideModal">
    <view class="cu-dialog" >
      <radio-group class="block">
        <view class="cu-list menu text-left">
          <view class="cu-item" wx:for="{{mode}}" wx:key>
            <label class="flex justify-between align-center flex-sub" bindtap="radioselect" data-item="{{item}}">
              <view class="flex-sub">{{item.name}}</view>
              <radio  bindtap="hideModal" checked="{{item.checked}}" class="round"></radio>
            </label>
          </view>
        </view>
      </radio-group>
    </view>
  </view>

    <!-- 自提时间选择 -->
  <view class="cu-modal {{modalName=='timeModal'?'show':''}}" >
    <view class="cu-dialog" >
            <view class="left">
              <view wx:key="lists" wx:for="{{lists}}">
                <view class='text-style' bindtap='jumpIndex' data-menuindex='{{index}}'>
                  <view class="{{indexId==index?'active1':''}}">{{item}}</view>
                  
                </view>
  
              </view>

          </view>
    </view>
  </view>