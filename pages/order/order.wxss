
page {
    background-color: #f3f3f3;
}
.order_address {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx 20rpx 20rpx;
    height: 120rpx;
    line-height: 120rpx;
    background: white;
    border-radius: 10rpx;
    padding: 30rpx;
}
.Receiving_address {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx;
    height: 200rpx;
    background: white;
    border-radius: 10rpx;
    padding: 30rpx;
}
.select_address {
    color: #7e7e7e;
}
.icon-arrowright {
    font-size: 28rpx;
}
.icon-map_line- {
    margin-right: 10rpx;
}
.goods_msg {
    display: flex;
    margin: 20rpx;
    background: red;
    border-radius: 10px;
    padding: 30rpx;
    align-items: center;
}
.goods_img {
    width: 200rpx;
    height: 200rpx;
    overflow: hidden;
    margin-right: 20rpx;
    flex-shrink: 0;
}
.goods_img image {
    width: 100%;
}
.goods_content {
    text-align: left;
    font-size: 24rpx;
    height: 200rpx
}
.shop_name{
    display: block;  
  max-height: 80rpx;  
  word-break:break-all;  
  display:-webkit-box;  
  -webkit-line-clamp:2;  
  -webkit-box-orient:vertical;  
  overflow:hidden;
}
.shop_type{
  display:-webkit-box;  
  font-size: 26rpx;  
  color: #ccc;  
  line-height: 50rpx;
}
.orderListTitle {
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
}
.orderListTitle .userName {
  padding-right: 10rpx;
  margin-left:20rpx;
  font-weight: bolder;
    font-size:30rpx;
}
.preferential{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx 20rpx;
    height: 30rpx;
    line-height: 200rpx;
    background: white;
    border-radius: 10rpx;
    padding: 30rpx 0;
    color: black

}

.msg_list {
    margin: 20rpx;
    background: white;
    border-radius: 10rpx;
}
.msg_item {
    display: flex;
    justify-content: space-between;
    margin: 0 20rpx;
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f3f3f3;
}
.msg_item1{
    margin: 0 20rpx;
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f3f3f3;
}
.message{
    display: flex;
    margin: 0 20rpx;
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f3f3f3;
    align-items: center
}
.Total {
    text-align: right;
    margin: 0 20rpx;
    padding: 30rpx 0;
    font-size: 32rpx;
    
}
.Total_price {
    color: #ad0e12;
    font-size: 32rpx;
}
.order_pay {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 93rpx;
    line-height: 93rpx;
    justify-content: space-between;
    background: white;
 
}
.submit_order {
    width: 32%;
    background: #ad0e12;
    color: white;
    font-size: 32rpx;
    text-align: center;
}
.pay_money {
    font-size: 32rpx;
    margin-left: 30rpx;
}
.bottom{
  padding-top:10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #f1f1f1
}

.shop{
  background: #fff;  
  padding:20rpx;  
  border-radius: 10rpx;
  margin: 5px 10px 0px 10px
  /* 上  右  下  左*/
}
.orderListDetails {
  display: flex;
  height: 200rpx;
  background-color: #fff;
}
.orderListTitle .userName {
  padding-right: 10rpx;
  margin-left:20rpx;
  font-weight: bolder;
    font-size:30rpx;
}