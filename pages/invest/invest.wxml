<view class="cu-custom" style="background:#2f70df;height:{{CustomBar}}px">
  <view class="cu-bar fixed {{bgImage!=''?'none-bg text-white bg-img':''}} {{bgColor}}" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;{{bgImage?'background-image:url(' + bgImage+')':''}}">
    <cu-custom  isBack="{{true}}">
      <view slot="backText">返回</view>
      <view slot="content">储值中心</view>
    </cu-custom>
  </view>
</view>

  <view class="invest-cart padding-sm margin radius">
    <view class="cu-avatar round margin-left" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big81005.jpg);"></view>
    <text class="cart-head">新领客储值卡</text>
    <view class="cu-bar" style="margin-top:180rpx">
    <text class="cart-money">￥899.00</text>
    <text class="text-white">储值享好礼，支付更方便</text>
    </view>
  </view>
  <view class="bg-white">
    <view class="padding-sm cu-bar" style="border-bottom: 1px solid #f1f1f1" bindtap="investMoney">立即充值
      <text class="cuIcon-right"></text>
    </view>
    <view class="padding-sm cu-bar" style="border-bottom: 1px solid #f1f1f1" bindtap="investRecord">交易记录
      <text class="cuIcon-right"></text>
    </view>
    <view class="padding-sm cu-bar" style="border-bottom: 1px solid #f1f1f1">卡号
      <text>33324354364534</text>
    </view>
    <view class="padding-sm cu-bar" bindtap="investNotice">使用须知
      <text class="cuIcon-right"></text>
    </view>
  </view>

