.invest{
  background-color: #ffffff;
  height: 100vh;
  width: 100%
}
.invest-cart{
  background-color: greenyellow;
  height: 120px;
  margin: 0px 9px 9px 9px;
  border-radius: 10px
}
.cart-head{
  font-size: 30rpx;
  color: #ffffff;
  margin-top: 40px;
  padding: 40px 40px 40px 40px
}
.cart-money{
  font-size: 20px;
  color: #ffffff;
  text-align: right;
}
.money{
  margin-left: 30px
}
.money-input{
  border: 1px solid #db6f6f;
  width: 100px;
  margin-left: 30px;
  height: 30px;
}
.recharge-btn{
  font-size: 30rpx;
  text-align: center;
  line-height: 30px;
  height: 30px;
  background-color: rgba(255, 0, 0, 0.671);
  width: 260px;
  color: #ffffff;
  border-radius: 50px
}