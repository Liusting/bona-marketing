<view class="cu-custom" style="background:#2f70df;height:{{CustomBar}}px">
  <view class="cu-bar fixed {{bgImage!=''?'none-bg text-white bg-img':''}} {{bgColor}}" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;{{bgImage?'background-image:url(' + bgImage+')':''}}">
    <cu-custom  isBack="{{true}}">
      <view slot="backText">返回</view>
      <view slot="content">会员专区</view>
    </cu-custom>
  </view>
</view>

<view class="bg-white padding-xs" style="flex-direction: row">

  <view class="cu-avatar lg round margin-left" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big25002.jpg);"></view>
  <text class="margin-left" style="font-size:35rpx">蓝色的夕阳</text>

  <text class="cuIcon-favor  bg-orange round" ></text>
  <text class="bg-orange" style="font-size:16rpx">注册会员</text>

</view>

  <view class="margin-top bg-black">
    <view class="padding-sm flex justify-between" >
      <text class="text-lg">会员权益</text>
      <text >服务协议<text class="cuIcon-right"></text></text>
    </view>
      <view  class="cu-list grid col-5 no-border" >
        <view class="cu-item" wx:for="{{iconList}}" wx:key>
          <view class="cuIcon-{{item.icon}} text-{{item.color}}"></view>
          <text style="color:{{item.color}}">{{item.name}}</text>
        </view>
      </view>
    <view>
    </view>
  </view>

    <view class="margin-top bg-black padding-xs flex justify-between align-center" >
      <text  style="font-size:24rpx">升级更高级会员，尊享高级会员权益，消费省更多~</text>
      <button bindtap="upgrade" class="cu-btn bg-yellow round sm">立即升级<text class="cuIcon-playfill"></text></button>
    </view>
<view class="padding bg-white ">

  <view>
    <text>会员等级说明</text>
  </view>
  <view class=" margin-top">
    <view class="cu-progress round xs">
      <view class="bg-green" style="width:{{loading?'30%':''}};"></view>
    </view>
  </view>
  <view class="bg-white margin-top">
    <view class="grid col-4 ">
      <view>注册会员</view>
      <view>白银会员</view>
      <view>黄金会员</view>
      <view>白金会员</view>
    </view>
  </view>
</view>